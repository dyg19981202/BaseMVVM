<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/dl_sj" />

        <EditText
            android:id="@+id/loginInputAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/close"
            android:layout_toRightOf="@+id/im_account"
            android:background="@null"
            android:hint="账号"
            android:inputType="phone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#2D2F3A"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:background="@color/login_striping"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dl_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:src="@mipmap/dl_mima" />

        <EditText
            android:id="@+id/loginInputPassword"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@id/pwd"
            android:layout_toRightOf="@id/dl_mima"
            android:background="@null"
            android:hint="密码"
            android:inputType="phone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#2D2F3A"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:background="@color/login_striping"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/shape_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="31dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已阅读并同意"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《用户服务协议》"
            android:textColor="#C962FA"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="《隐私政策》"
        android:textColor="#C962FA"
        android:textSize="14sp" />
</LinearLayout>