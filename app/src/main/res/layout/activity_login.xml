<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/dl_sj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="登录账号"
                android:textColor="#ff2d2f3a"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本机号码 130****3325"
                android:textColor="#ff2d2f3a"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/oneKeyLoginTv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="31dp"
            android:background="@drawable/shape_login"
            android:gravity="center"
            android:text="一键登录"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="31dp"
            android:background="@drawable/shape_other"
            android:gravity="center"
            android:text="其他号码登陆"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="31dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_is_read_agreement" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已阅读并同意"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="《用户服务协议》"
                android:textColor="#C962FA"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《隐私政策》"
            android:textColor="#C962FA"
            android:textSize="14sp" />
    </LinearLayout>
</layout>